  "components": {
    "schemas": {
      "AddWatchedMovieDto": {
        "required": [
          "tmdbMovieId"
        ],
        "type": "object",
        "properties": {
          "tmdbMovieId": {
            "type": "integer",
            "format": "int32"
          },
          "movieTitle": {
            "type": "string",
            "nullable": true
          },
          "posterPath": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "required": [
          "identifier",
          "password"
        ],
        "type": "object",
        "properties": {
          "identifier": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RateMovieDto": {
        "required": [
          "movieId",
          "rating"
        ],
        "type": "object",
        "properties": {
          "movieId": {
            "type": "integer",
            "format": "int32"
          },
          "rating": {
            "maximum": 5,
            "minimum": 1,
            "type": "number",
            "format": "double"
          },
          "review": {
            "maxLength": 1000,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterDto": {
        "required": [
          "confirmPassword",
          "email",
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 20,
            "minLength": 3,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "maxLength": 100,
            "minLength": 6,
            "type": "string"
          },
          "confirmPassword": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdateProfileDto": {
        "required": [
          "currentPassword"
        ],
        "type": "object",
        "properties": {
          "newUsername": {
            "type": "string",
            "nullable": true
          },
          "currentPassword": {
            "minLength": 1,
            "type": "string"
          },
          "newPassword": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserRatingDto": {
        "type": "object",
        "properties": {
          "movieId": {
            "type": "integer",
            "format": "int32"
          },
          "rating": {
            "type": "number",
            "format": "double"
          },
          "ratedOn": {
            "type": "string",
            "format": "date-time"
          },
          "review": {
            "type": "string",
            "nullable": true
          },
          "movieTitle": {
            "type": "string",
            "nullable": true
          },
          "movieGenres": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme",
        "name": "Authorization",
